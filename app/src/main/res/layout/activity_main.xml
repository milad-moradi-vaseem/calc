<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text3"
        android:layout_width="408dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="4dp"
        android:text="@string/text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/one_text"
        android:layout_width="121dp"
        android:layout_height="80dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="280dp"
        android:text="1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/two_text"
        android:layout_width="118dp"
        android:layout_height="76dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="148dp"
        android:text="2"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/three_text"
        android:layout_width="125dp"
        android:layout_height="76dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="16dp"
        android:text="3"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/four_text"
        android:layout_width="134dp"
        android:layout_height="82dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="276dp"
        android:text="4"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/five_text"
        android:layout_width="125dp"
        android:layout_height="80dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="144dp"
        android:text="5"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/six_text"
        android:layout_width="133dp"
        android:layout_height="80dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="4dp"
        android:text="6"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/seven_text"
        android:layout_width="128dp"
        android:layout_height="79dp"
        android:layout_marginEnd="276dp"
        android:layout_marginBottom="188dp"
        android:text="7"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/eight_text"
        android:layout_width="131dp"
        android:layout_height="81dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="188dp"
        android:text="8"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/nine_text"
        android:layout_width="131dp"
        android:layout_height="78dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="188dp"
        android:text="9"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/zero_text"
        android:layout_width="132dp"
        android:layout_height="84dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="104dp"
        android:text="0"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/plus_text"
        android:layout_width="128dp"
        android:layout_height="82dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="104dp"
        android:text="+"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/subtraction_text"
        android:layout_width="127dp"
        android:layout_height="82dp"
        android:layout_marginBottom="104dp"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.975"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/beat_text"
        android:layout_width="136dp"
        android:layout_height="81dp"
        android:layout_marginEnd="268dp"
        android:layout_marginBottom="24dp"
        android:text="x"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/split_text"
        android:layout_width="131dp"
        android:layout_height="78dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="24dp"
        android:text="รท"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/equal_text"
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="24dp"
        android:text="="
        android:textColorHighlight="@color/black"
        android:textColorLink="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>